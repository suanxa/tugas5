<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selamat Datang di multiprogram Suanxa"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/instruksi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Silahkan pilih yang di inginkan"
        android:textSize="18sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/pil1"
        android:backgroundTint="#123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Konversi Suhu" />

    <Button
        android:id="@+id/pil2"
        android:backgroundTint="#123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diskon" />

    <Button
        android:id="@+id/pil3"
        android:backgroundTint="#123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Volume/Luas" />

    <Button
        android:id="@+id/pil4"
        android:backgroundTint="#123456"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ganjil/Genap" />

</LinearLayout>
